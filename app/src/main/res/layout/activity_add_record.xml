<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록 추가하기"
        android:textSize="28sp"
        android:fontFamily="@font/kopubworld_dotum_pro_bold"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <!-- 약 이름 입력 -->
    <EditText
        android:id="@+id/editMedicineName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="약 이름"
        android:padding="16dp"
        android:background="@drawable/rounded_item_bg"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#999999"/>

    <!-- 증상 입력 -->
    <EditText
        android:id="@+id/editSymptom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="증상"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="@drawable/rounded_item_bg"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#999999"/>

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="저장하기"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:background="@drawable/button_add_record"
        android:fontFamily="@font/kopubworld_dotum_pro_bold"/>

</LinearLayout>
