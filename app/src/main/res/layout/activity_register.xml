<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 제목 -->
        <TextView
            android:id="@+id/txtRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:fontFamily="@font/kopubworld_dotum_pro_bold"
            android:paddingBottom="30dp"/>

        <!-- 이름 -->
        <EditText
            android:id="@+id/editRegisterName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="이름"
            android:padding="15dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_card"
            android:layout_marginBottom="15dp"/>

        <!-- 이메일 -->
        <EditText
            android:id="@+id/editRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="이메일"
            android:padding="15dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_card"
            android:layout_marginBottom="15dp"/>

        <!-- 비밀번호 -->
        <EditText
            android:id="@+id/editRegisterPwd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_card"
            android:layout_marginBottom="15dp"/>

        <!-- 비밀번호 확인 -->
        <EditText
            android:id="@+id/editRegisterPwdCheck"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_card"
            android:layout_marginBottom="30dp"/>

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/button_add_record"
            android:fontFamily="@font/kopubworld_dotum_pro_bold"
            android:layout_marginBottom="20dp"/>

        <!-- 로그인으로 이동 -->
        <TextView
            android:id="@+id/txtGoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 계정이 있으신가요? 로그인하기"
            android:textColor="#FF7575"
            android:textSize="14sp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>
