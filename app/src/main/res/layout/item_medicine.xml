<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_item_bg"
    android:padding="20dp"
    android:layout_margin="30dp">

    <TextView
        android:id="@+id/txtMedicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약 이름"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/kopubworld_dotum_pro_bold" />

    <TextView
        android:id="@+id/txtMedicineSymptom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="증상"
        android:textSize="18sp"
        android:textColor="#777777"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kopubworld_dotum_pro_light" />

</LinearLayout>
